    /**
     * Default validation rules.
     *
     * @param \Cake\Validation\Validator $validator Validator instance.
     * @return \Cake\Validation\Validator
     */
    public function validationDefault(Validator $validator)
    {
        $validator
            ->integer('id')
            ->allowEmpty('id', 'create');

        $validator
            ->scalar('name')
            ->requirePresence('name', 'create')
            ->notEmpty('name');

        $validator
            ->scalar('urlname')
            ->requirePresence('urlname')
            ->notEmpty('urlname');

        $validator
            ->email('email_from')
            ->allowEmpty('email_from')
            ->maxLength('email_from', 100);

        $validator->allowEmpty('email_subject')
            ->maxLength('email_subject', 100);

        $validator->allowEmpty('message');

        return $validator;
    }

    public function buildRules(RulesChecker $rules)
    {
        $rules->add($rules->isUnique(['urlname'],
            'Es existiert schon ein Formular mit dem selben oder einem Ã¤hnlichen URL-Namen.'),
            ['errorField' => 'name']
        );

        return $rules;
    }
}